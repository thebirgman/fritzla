.section-header.shopify-section-group-header-group {
    z-index: 0;
}

.drawer.active .drawer__inner {
    max-width: 512px;
    width: 100%;
    padding: 0;
}

.drawer__heading {
    font-family: Source Serif Pro;
    font-weight: 600;
    font-size: 24px;
    line-height: 120%;
    letter-spacing: -0.5px;
    vertical-align: middle;
    margin: 0;
}

.drawer__close {
    right: 10px;
}

.drawer__close .svg-wrapper {
    padding: 4px;
    padding-top: 0;
}

.drawer__header {
    padding: 14px 20px;
    border-bottom: .5px solid #D9D9D9;
}

.cart-drawer .cart-item {
    margin-top: 32px;
    margin-bottom: 32px !important;
    display: flex;
}

.cart-drawer .cart-item>td {
    padding-top: 0;
}

cart-drawer-items {
    padding: 0 20px;
}

.drawer__footer {
    padding: 0 20px 32px;
    border-top: .7px solid;
}

body .cart-item__name {
    font-family: Sofia Sans;
    font-weight: 700;
    font-size: 16px;
    line-height: 140%;
    letter-spacing: 0;
}

.cart-drawer .cart-item__image {
    max-height: 107px;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
}

.cart-drawer .cart-item__media {
    max-height: 107px;
    max-width: 80px;
}

.cart-drawer .cart-item {
    gap: 16px;
}

.cart-item__details-cont {
    width: 100%;
}

.cart-item__details-cont {
    display: flex;
    flex-direction: column;
}
