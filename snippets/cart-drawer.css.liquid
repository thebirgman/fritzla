
.drawer.active .drawer__inner {
    max-width: 512px;
    width: 100%;
    padding: 0;
}

.drawer {
    z-index: 9999;
}

.drawer__heading {
    font-family: Source Serif 4;
    font-weight: 600;
    font-size: 24px;
    line-height: 120%;
    letter-spacing: -0.5px;
    vertical-align: middle;
    margin: 0;
}

.drawer__close {
    right: 10px;
}

.drawer__close .svg-wrapper {
    padding: 4px;
    padding-top: 0;
}

.drawer__header {
    padding: 14px 20px;
    border-bottom: .5px solid #D9D9D9;
}

.cart-drawer .cart-item {
    margin-top: 32px;
    margin-bottom: 32px !important;
    display: flex;
}

.cart-drawer .cart-item>td {
    padding-top: 0;
}

cart-drawer-items {
    padding: 0 20px;
}

.drawer__footer {
    padding: 0 20px 32px;
    border-top: .7px solid;
}

body .cart-item__name {
    font-family: Sofia Sans;
    font-weight: 700;
    font-size: 16px;
    line-height: 140%;
    letter-spacing: 0;
}

.cart-drawer .cart-item__image {
    max-height: 107px;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
}

.cart-drawer .cart-item__media {
    max-height: 107px;
    max-width: 80px;
}

.cart-drawer .cart-item {
    gap: 16px;
}

.cart-item__details-cont {
    width: 100%;
}

.cart-item__details-cont {
    display: flex;
    flex-direction: column;
}

.cart-drawer .cart-item__details {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.product-option.vendor-name {
    font-family: Sofia Sans;
    font-weight: 400;
    font-size: 14px;
    line-height: 140%;
    letter-spacing: 0;
    vertical-align: middle;
}

.product-option {
    font-family: Sofia Sans;
    font-weight: 400;
    font-size: 14px;
    line-height: 140%;
    letter-spacing: 0;
    vertical-align: middle;
    margin: 0;
}

.cart-item cart-remove-button {
    display: none;
}

.cart-drawer .quantity__input {
    line-height: 100%;
    max-height: max-content;
    width: 100%;
    padding: 8px 0;
    max-width: 32px;
}

.cart-drawer .quantity__button {
    padding: 8px;
    aspect-ratio: 1;
    width: unset;
}

quantity-popover .quantity {
    min-height: unset;
    min-width: unset;
    width: unset;
}

.cart-item .cart-item__quantity {
    padding: 0;
}

.cart-drawer .quantity__button[name="plus"] {
    padding-right: 0;
    display: flex;
    justify-content: flex-end;
}

.cart-drawer .quantity__button[name="minus"] {
    padding-left: 0;
    display: flex;
    justify-content: flex-start;
}

.quantity__button .svg-wrapper {
    width: 10px;
}

.cart-item__details-cont {
    display: flex;
    justify-content: space-between;
}

.cart-item__quantity-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.cart-item__total-name {
    font-family: Sofia Sans;
    font-weight: 400;
    font-size: 14px;
    line-height: 140%;
    letter-spacing: 0;
    vertical-align: middle;
    margin: 0;
}

.cart-item__details-cont {
    padding: 6px 0 0;
}

.cart-drawer .cart-item__error {
    display: none;
}