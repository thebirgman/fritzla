    gap: 0.25rem;
  }
  
  .breadcrumb-simple a {
    text-decoration: none;
    color: inherit;
  }
  
  .breadcrumb-divider {
    margin: 0 0.25rem;
    color: #999;
  }
  
  .breadcrumb-product {
    font-weight: 500;
  }

  nav.breadcrumb-simple * {
    font-weight: 300;
