{%- comment -%}
  breadcrumb-product.liquid
  Usage: {% render 'breadcrumb-product', product: product %}
{%- endcomment -%}

{%- assign current_collection = collection | default: product.collections.first -%}
{% assign collection_handle = collection.handle | default: product.collections.first.handle %}
{% assign collection_object = collections[collection_handle] %}

<nav class="breadcrumb-product" aria-label="Breadcrumb">
  <div class="breadcrumb-left">
    {%- if current_collection -%}
     <a href="{{ collection_object.url }}" class="breadcrumb-back">
        {{ collection_object.title }}
      </a>
    {%- endif -%}
  </div>

  <div class="breadcrumb-center">
    <a href="/" class="breadcrumb-home">Hem</a>
    <span class="breadcrumb-separator">/</span>
    <span class="breadcrumb-current">{{ product.title }}</span>
  </div>
</nav>

<style>
  .breadcrumb-product {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 14px;
    color: #666;
  }

  .breadcrumb-left a {
    color: #666;
    text-decoration: none;
  }

  .breadcrumb-left a:hover {
    text-decoration: underline;
  }

  .breadcrumb-center {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .breadcrumb-home {
    font-weight: 600;
    color: #000;
    text-decoration: none;
  }

  .breadcrumb-home:hover {
    text-decoration: underline;
  }

  .breadcrumb-current {
    color: #666;
  }
</style>
