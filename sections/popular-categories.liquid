{% comment %}
  Section: Popular Categories
  - Displays up to N collection/image cards in a flex-based CSS carousel.
  - No JS used.
  - Option to switch to vertical layout on mobile.
{% endcomment %}

<section class="popular-categories section-{{ section.id }}">
    <div class="page-width">
  {% if section.settings.heading != blank %}
    <h2 class="popular-categories__heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="popular-categories__wrapper {% if section.settings.mobile_layout == 'vertical' %}vertical{% else %}carousel{% endif %} {% if section.blocks.size <= 2 %}stack-mobile{% endif %}">
    {% for block in section.blocks %}
      {% assign collection = block.settings.collection %}
      {% assign image = block.settings.image %}
      {% assign title = block.settings.title %}
      {% assign url = block.settings.url %}

      {% if collection != blank %}
        {% assign image = collection.image | default: image %}
        {% assign title = collection.title %}
        {% assign url = collection.url %}
        {% assign subheading = block.settings.subheading %}
      {% endif %}

      <div class="popular-categories__item">
        {% if image %}
          <a href="{{ url | default: '#' }}" class="popular-categories__image-link">
            <img src="{{ image | image_url: width: 800 }}" alt="{{ title | escape }}" class="popular-categories__image">
            <div class="popular-categories__overlay">
              <h3 class="popular-categories__title">{{ title }}</h3>
              {% if block.settings.subheading != blank %}
                <p class="popular-categories__subheading">
                  {{ subheading }}
                </p>
              {% endif %}
              {% if block.settings.button_label != blank %}
                <span class="popular-categories__button">{{ block.settings.button_label }}</span>
              {% endif %}
            </div>
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
{% render 'popular-categories.css' %}
</section>

{% schema %}
{
  "name": "Popular Categories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Popul√§ra kategorier"
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "label": "Mobile layout",
      "options": [
        { "value": "carousel", "label": "Carousel" },
        { "value": "vertical", "label": "Vertical list" }
      ],
      "default": "carousel"
    },
    {
      "type": "color",
      "id": "section_background",
      "label": "Section Background"
    },
    {
        "type": "range",
        "id": "font_size",
        "label": "Heading Font Size",
        "min": 12,
        "max": 100,
        "step": 2,
        "default": 16
    },
    {
        "type": "range",
        "id": "padding_top",
        "label": "Padding Top",
        "min": 0,
        "max": 200,
        "step": 4,
        "default": 72,
        "unit": "px"
    },
    {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding Bottom",
        "min": 0,
        "max": 200,
        "step": 4,
        "default": 72,
        "unit": "px"
    },
    {
        "type": "range",
        "id": "mobile_padding_top",
        "label": "Mobile Padding Top",
        "min": 0,
        "max": 200,
        "step": 4,
        "default": 32,
        "unit": "px"
    },
    {
        "type": "range",
        "id": "mobile_padding_bottom",
        "label": "Mobile Padding Bottom",
        "min": 0,
        "max": 200,
        "step": 4,
        "default": 32,
        "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category card",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Fallback image"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Fallback title"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Fallback link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Handla nu"
        },
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Popular Categories",
      "category": "Collection"
    }
  ]
}
{% endschema %}
