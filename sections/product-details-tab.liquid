{% comment %}
  Product details tabs from metafields: Beskrivning, Material, Detaljer, Frakt & Leverans.
  Each section uses a rich text metafield and an optional image metafield.
{% endcomment %}
{% assign mf_beskrivning = product.metafields.custom.beskrivning %}
{% assign mf_material = product.metafields.custom.material %}
{% assign mf_detaljer = product.metafields.custom.detaljer %}
{% assign mf_frakt = product.metafields.custom.frakt_leverans %}
{% assign has_any_tab = mf_beskrivning | default: mf_material | default: mf_detaljer | default: mf_frakt %}

{% assign first_tab_image = product.metafields.custom.beskrivning_image | default: product.metafields.custom.material_image | default: product.metafields.custom.detaljer_image | default: product.metafields.custom.frakt_leverans_image %}

{% if has_any_tab != blank %}
<div class="product-details-tab">
  <div class="product-details-tab__inner page-width">
    <div class="product-details-tab__flex">
      <div class="product-details-tab__tabs">
        {% assign tab_index = 0 %}
        {% if mf_beskrivning != blank %}
          <button class="product-details-tab__tab-button{% if tab_index == 0 %} is-active{% endif %}" data-tab-index="{{ tab_index }}">{{ section.settings.heading_description | escape }}</button>
          {% assign tab_index = tab_index | plus: 1 %}
        {% endif %}
        {% if mf_material != blank %}
          <button class="product-details-tab__tab-button{% if tab_index == 0 %} is-active{% endif %}" data-tab-index="{{ tab_index }}">{{ section.settings.heading_material | escape }}</button>
          {% assign tab_index = tab_index | plus: 1 %}
        {% endif %}
        {% if mf_detaljer != blank %}
          <button class="product-details-tab__tab-button{% if tab_index == 0 %} is-active{% endif %}" data-tab-index="{{ tab_index }}">{{ section.settings.heading_details | escape }}</button>
          {% assign tab_index = tab_index | plus: 1 %}
        {% endif %}
        {% if mf_frakt != blank %}
          <button class="product-details-tab__tab-button{% if tab_index == 0 %} is-active{% endif %}" data-tab-index="{{ tab_index }}">{{ section.settings.heading_shipping_delivery | escape }}</button>
        {% endif %}
      </div>

      <div class="product-details-tab__content-wrapper">
        {% assign tab_index = 0 %}
        {% if mf_beskrivning != blank %}
          <div class="product-details-tab__content-block{% if tab_index == 0 %} is-active{% endif %}" data-tab-content-index="{{ tab_index }}">
            <div class="product-details-tab__text">{{ mf_beskrivning | metafield_tag }}</div>
          </div>
          {% assign tab_index = tab_index | plus: 1 %}
        {% endif %}
        {% if mf_material != blank %}
          <div class="product-details-tab__content-block{% if tab_index == 0 %} is-active{% endif %}" data-tab-content-index="{{ tab_index }}">
            <div class="product-details-tab__text">{{ mf_material | metafield_tag }}</div>
          </div>
          {% assign tab_index = tab_index | plus: 1 %}
        {% endif %}
        {% if mf_detaljer != blank %}
          <div class="product-details-tab__content-block{% if tab_index == 0 %} is-active{% endif %}" data-tab-content-index="{{ tab_index }}">
            <div class="product-details-tab__text">{{ mf_detaljer | metafield_tag }}</div>
          </div>
          {% assign tab_index = tab_index | plus: 1 %}
        {% endif %}
        {% if mf_frakt != blank %}
          <div class="product-details-tab__content-block{% if tab_index == 0 %} is-active{% endif %}" data-tab-content-index="{{ tab_index }}">
            <div class="product-details-tab__text">{{ mf_frakt | metafield_tag }}</div>
          </div>
        {% endif %}
      </div>

      <div class="product-details-tab__image-wrapper">
        {% assign tab_index = 0 %}
        {% if mf_beskrivning != blank %}
          <div class="product-details-tab__image-block{% if tab_index == 0 %} is-active{% endif %}" data-tab-image-index="{{ tab_index }}">
            {% assign img = product.metafields.custom.beskrivning_image %}
            <img
              src="{% if img != blank %}{{ img | image_url: width: 800 }}{% else %}{{ first_tab_image | image_url: width: 800 }}{% endif %}"
              alt="{% if img != blank %}{{ img.alt | escape }}{% else %}{{ first_tab_image.alt | escape }}{% endif %}"
              class="product-details-tab__image"
              loading="lazy"
            />
          </div>
          {% assign tab_index = tab_index | plus: 1 %}
        {% endif %}
        {% if mf_material != blank %}
          <div class="product-details-tab__image-block{% if tab_index == 0 %} is-active{% endif %}" data-tab-image-index="{{ tab_index }}">
            {% assign img = product.metafields.custom.material_image %}
            <img
              src="{% if img != blank %}{{ img | image_url: width: 800 }}{% else %}{{ first_tab_image | image_url: width: 800 }}{% endif %}"
              alt="{% if img != blank %}{{ img.alt | escape }}{% else %}{{ first_tab_image.alt | escape }}{% endif %}"
              class="product-details-tab__image"
              loading="lazy"
            />
          </div>
          {% assign tab_index = tab_index | plus: 1 %}
        {% endif %}
        {% if mf_detaljer != blank %}
          <div class="product-details-tab__image-block{% if tab_index == 0 %} is-active{% endif %}" data-tab-image-index="{{ tab_index }}">
            {% assign img = product.metafields.custom.detaljer_image %}
            <img
              src="{% if img != blank %}{{ img | image_url: width: 800 }}{% else %}{{ first_tab_image | image_url: width: 800 }}{% endif %}"
              alt="{% if img != blank %}{{ img.alt | escape }}{% else %}{{ first_tab_image.alt | escape }}{% endif %}"
              class="product-details-tab__image"
              loading="lazy"
            />
          </div>
          {% assign tab_index = tab_index | plus: 1 %}
        {% endif %}
        {% if mf_frakt != blank %}
          <div class="product-details-tab__image-block{% if tab_index == 0 %} is-active{% endif %}" data-tab-image-index="{{ tab_index }}">
            {% assign img = product.metafields.custom.frakt_leverans_image %}
            <img
              src="{% if img != blank %}{{ img | image_url: width: 800 }}{% else %}{{ first_tab_image | image_url: width: 800 }}{% endif %}"
              alt="{% if img != blank %}{{ img.alt | escape }}{% else %}{{ first_tab_image.alt | escape }}{% endif %}"
              class="product-details-tab__image"
              loading="lazy"
            />
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% endif %}


