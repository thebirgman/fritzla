{% comment %}
  Section: Popular Categories
  - Displays up to N collection/image cards in a flex-based CSS carousel.
  - No JS used.
  - Option to switch to vertical layout on mobile.
{% endcomment %}

<section class="popular-categories section-{{ section.id }}">
    <div class="page-width">
  {% if section.settings.heading != blank %}
    <h2 class="popular-categories__heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="popular-categories__wrapper {% if section.settings.mobile_layout == 'vertical' %}vertical{% else %}carousel{% endif %}">
    {% for block in section.blocks %}
      {% assign collection = block.settings.collection %}
      {% assign image = block.settings.image %}
      {% assign title = block.settings.title %}
      {% assign url = block.settings.url %}

      {% if collection != blank %}
        {% assign image = collection.image | default: image %}
        {% assign title = collection.title %}
        {% assign url = collection.url %}
      {% endif %}

      <div class="popular-categories__item">
        {% if image %}
          <a href="{{ url | default: '#' }}" class="popular-categories__image-link">
            <img src="{{ image | image_url: width: 800 }}" alt="{{ title | escape }}" class="popular-categories__image">
            <div class="popular-categories__overlay">
              <h3 class="popular-categories__title">{{ title }}</h3>
              <span class="popular-categories__button">{{ block.settings.button_label }}</span>
            </div>
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>

  <style>
    .popular-categories {
      padding: 40px 0;
      background: {{ section.settings.section_background }};
    }

    .popular-categories__heading {
      font-weight: 700;
      margin-bottom: 1.5rem;
    }

    .popular-categories__wrapper {
      display: flex;
      gap: 1rem;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
    }

    .popular-categories__wrapper::-webkit-scrollbar {
      display: none;
    }

    .popular-categories__item {
      flex: 0 0 calc(33.333% - 0.67rem);
      scroll-snap-align: start;
      border-radius: 0.75rem;
      overflow: hidden;
      position: relative;
    }

    .popular-categories__image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    .popular-categories__overlay {
      position: absolute;
      inset: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: rgba(0, 0, 0, 0.3);
      color: #fff;
      text-align: center;
      transition: opacity 0.3s ease;
    }

    .popular-categories__item:hover .popular-categories__overlay {
      opacity: 1;
    }

    .popular-categories__title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .popular-categories__button {
      display: inline-block;
      background: #fff;
      color: #000;
      padding: 0.4rem 1rem;
      border-radius: 9999px;
      font-size: 0.875rem;
    }

    .popular-categories__heading {
        font-size: 32px;
    }

    .popular-categories__title {
        color: white;
        font-family: Source Serif Pro;
        font-weight: 600;
        font-size: 32px;
        line-height: 120%;
        letter-spacing: -1px;
        text-align: center;
        margin: 0;
    }

    .popular-categories__overlay {
        gap: 16px;
    }

    .popular-categories__button {
        font-family: Sofia Sans;
        font-weight: 400;
        font-size: 14px;
        line-height: 140%;
        letter-spacing: 0;
        vertical-align: bottom;
        border-radius: 100px;
        margin: 16px 0;
        height: 40px;
        display: flex;
        align-items: center;
        padding: 0 16px;
    }

    .popular-categories__item {
        border-radius: 16px;
        flex: unset;
    }

    .popular-categories__wrapper {
        gap: 40px;
    }

    .popular-categories {
        padding: 72px 0;
    }

    .popular-categories__heading {
        margin: 0;
        margin-bottom: 40px;
    }

    .popular-categories__button:hover {
        background: #212121;
        color: white;
        transition: .2s ease-in-out;
    }

    .popular-categories__button {
        transition: .2s ease-in-out;
    }

    /* Vertical mode for mobile */
    @media (max-width: 768px) {
      .popular-categories__wrapper.vertical {
        flex-direction: column;
        overflow: visible;
      }
      .popular-categories__item {
        flex: 1 1 100%;
        min-width: 75%;
      }

      .page-width {
        padding: 0 24px;
        }

        .popular-categories__wrapper {
            gap: 16px;
        }

        .popular-categories__wrapper.vertical {
            gap: 32px;
        }

        .popular-categories {
            padding: 32px 0;
        }
        
        .popular-categories__heading {
            font-size: 20px;
            margin-bottom: 24px;
        }
    }
  </style>
</div>
</section>

{% schema %}
{
  "name": "Popular Categories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Popul√§ra kategorier"
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "label": "Mobile layout",
      "options": [
        { "value": "carousel", "label": "Carousel" },
        { "value": "vertical", "label": "Vertical list" }
      ],
      "default": "carousel"
    },
    {
      "type": "color",
      "id": "section_background",
      "label": "Section Background"
    },
    {
        "type": "range",
        "id": "font_size",
        "label": "Heading Font Size",
        "min": 12,
        "max": 100,
        "step": 2,
        "default": 16
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category card",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Fallback image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Fallback title"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Fallback link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Handla nu"
        },
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Popular Categories",
      "category": "Collection"
    }
  ]
}
{% endschema %}
