{% doc %}
  @prompt
    A full width hero section with option to add a video in the background. Need also option to set a centered preheader, headline body copy and cta
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-video-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.min_height_desktop }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: {{ block.settings.overlay_color }};
  }

  .ai-hero-video__background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-video__video-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    object-fit: cover;
  }

  .ai-hero-video__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-video__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-hero-video__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: center;
    max-width: {{ block.settings.content_max_width }}px;
    padding: 40px 20px;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-video__preheader-{{ ai_gen_id }} {
    font-size: {{ block.settings.preheader_size }}px;
    margin: 0 0 16px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 500;
  }

  .ai-hero-video__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size_desktop }}px;
    margin: 0 0 20px;
    line-height: 1.2;
    font-weight: 700;
  }

  .ai-hero-video__body-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_size }}px;
    margin: 0 0 32px;
    line-height: 1.6;
  }

  .ai-hero-video__cta-{{ ai_gen_id }} {
    display: inline-block;
    padding: 16px 40px;
    background-color: {{ block.settings.cta_bg_color }};
    color: {{ block.settings.cta_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.cta_border_radius }}px;
    font-size: {{ block.settings.cta_font_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .ai-hero-video__cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.cta_hover_bg_color }};
    color: {{ block.settings.cta_hover_text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-hero-video-{{ ai_gen_id }} {
      min-height: {{ block.settings.min_height_mobile }}px;
    }

    .ai-hero-video__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-hero-video__content-{{ ai_gen_id }} {
      padding: 30px 16px;
    }
  }
{% endstyle %}

<hero-video-{{ ai_gen_id }} class="ai-hero-video-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-video__background-{{ ai_gen_id }}">
    {% if block.settings.video_url != blank %}
      <video
        class="ai-hero-video__video-{{ ai_gen_id }}"
        autoplay
        muted
        loop
        playsinline
      >
        <source src="{{ block.settings.video_url }}" type="video/mp4">
      </video>
    {% elsif block.settings.fallback_image %}
      <img
        src="{{ block.settings.fallback_image | image_url: width: 2000 }}"
        alt="{{ block.settings.fallback_image.alt | escape }}"
        class="ai-hero-video__image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.fallback_image.width }}"
        height="{{ block.settings.fallback_image.height }}"
      >
    {% else %}
      <div class="ai-hero-video__image-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-hero-video__overlay-{{ ai_gen_id }}"></div>

  <div class="ai-hero-video__content-{{ ai_gen_id }}">
    {% if block.settings.preheader != blank %}
      <div class="ai-hero-video__preheader-{{ ai_gen_id }}">
        {{ block.settings.preheader }}
      </div>
    {% endif %}

    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-video__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h1>
    {% endif %}

    {% if block.settings.body_text != blank %}
      <div class="ai-hero-video__body-{{ ai_gen_id }}">
        {{ block.settings.body_text }}
      </div>
    {% endif %}

    {% if block.settings.cta_text != blank and block.settings.cta_link != blank %}
      <a href="{{ block.settings.cta_link }}" class="ai-hero-video__cta-{{ ai_gen_id }}">
        {{ block.settings.cta_text }}
      </a>
    {% endif %}
  </div>
</hero-video-{{ ai_gen_id }}>

<script>
  (function() {
    class HeroVideo{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const video = this.querySelector('.ai-hero-video__video-{{ ai_gen_id }}');
        if (video) {
          video.play().catch(error => {
            console.log('Video autoplay failed:', error);
          });
        }
      }
    }

    customElements.define('hero-video-{{ ai_gen_id }}', HeroVideo{{ ai_gen_id }});
  })();
</script>

