{% doc %}
  @prompt
    Utgå från video sektionen jag skapade.
    Men generera ett block som kan autospela video med möjlighet att ladda upp video för desktop 16:9 och mobil 4:5
    
    Vill även kunna addera preheader, rubrik, body copy och cta.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-autoplay-video-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
  }

  .ai-autoplay-video__container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-autoplay-video__video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    overflow: hidden;
  }

  @media screen and (max-width: 749px) {
    .ai-autoplay-video__video-wrapper-{{ ai_gen_id }} {
      padding-bottom: 125%;
    }
  }

  .ai-autoplay-video__video-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-autoplay-video__content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_position }};
    align-items: {{ block.settings.content_alignment }};
    padding: 40px;
    z-index: 2;
    text-align: {{ block.settings.text_alignment }};
  }

  @media screen and (max-width: 749px) {
    .ai-autoplay-video__content-{{ ai_gen_id }} {
      padding: 24px;
    }
  }

  .ai-autoplay-video__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  .ai-autoplay-video__preheader-{{ ai_gen_id }} {
    font-size: {{ block.settings.preheader_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-autoplay-video__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    line-height: 1.2;
  }

  @media screen and (max-width: 749px) {
    .ai-autoplay-video__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }
  }

  .ai-autoplay-video__body-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 24px;
    max-width: 600px;
  }

  @media screen and (max-width: 749px) {
    .ai-autoplay-video__body-{{ ai_gen_id }} {
      font-size: {{ block.settings.body_size | times: 0.9 }}px;
    }
  }

  .ai-autoplay-video__cta-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-autoplay-video__cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-autoplay-video__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-autoplay-video__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-autoplay-video__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }
{% endstyle %}

<autoplay-video-{{ ai_gen_id }}
  class="ai-autoplay-video-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-autoplay-video__container-{{ ai_gen_id }}">
    <div class="ai-autoplay-video__video-wrapper-{{ ai_gen_id }}">
      {% if block.settings.video_desktop != blank or block.settings.video_mobile != blank %}
        <video
          class="ai-autoplay-video__video-{{ ai_gen_id }} ai-autoplay-video__video-desktop-{{ ai_gen_id }}"
          autoplay
          muted
          loop
          playsinline
          {% if block.settings.video_desktop != blank %}
            src="{{ block.settings.video_desktop }}"
          {% endif %}
          style="display: block;"
        ></video>
        
        {% if block.settings.video_mobile != blank %}
          <video
            class="ai-autoplay-video__video-{{ ai_gen_id }} ai-autoplay-video__video-mobile-{{ ai_gen_id }}"
            autoplay
            muted
            loop
            playsinline
            src="{{ block.settings.video_mobile }}"
            style="display: none;"
          ></video>
        {% endif %}
      {% else %}
        <div class="ai-autoplay-video__placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
          <div class="ai-autoplay-video__empty-state-{{ ai_gen_id }}">
            Ladda upp en video för desktop och mobil
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-autoplay-video__overlay-{{ ai_gen_id }}"></div>

    <div class="ai-autoplay-video__content-{{ ai_gen_id }}">
      {% if block.settings.preheader != blank %}
        <div class="ai-autoplay-video__preheader-{{ ai_gen_id }}">
          {{ block.settings.preheader }}
        </div>
      {% endif %}

      {% if block.settings.heading != blank %}
        <h2 class="ai-autoplay-video__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.body_text != blank %}
        <div class="ai-autoplay-video__body-{{ ai_gen_id }}">
          {{ block.settings.body_text }}
        </div>
      {% endif %}

      {% if block.settings.cta_text != blank and block.settings.cta_link != blank %}
        <a
          href="{{ block.settings.cta_link }}"
          class="ai-autoplay-video__cta-{{ ai_gen_id }}"
        >
          {{ block.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</autoplay-video-{{ ai_gen_id }}>

<script>
  (function() {
    class AutoplayVideo{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.desktopVideo = this.querySelector('.ai-autoplay-video__video-desktop-{{ ai_gen_id }}');
        this.mobileVideo = this.querySelector('.ai-autoplay-video__video-mobile-{{ ai_gen_id }}');
      }

      connectedCallback() {
        if (this.desktopVideo && this.mobileVideo) {
          this.handleResponsiveVideo();
          window.addEventListener('resize', () => this.handleResponsiveVideo());
        }
      }

      handleResponsiveVideo() {
        const isMobile = window.innerWidth <= 749;
        
        if (this.desktopVideo) {
          this.desktopVideo.style.display = isMobile ? 'none' : 'block';
        }
        
        if (this.mobileVideo) {
          this.mobileVideo.style.display = isMobile ? 'block' : 'none';
        }
      }
    }

    customElements.define('autoplay-video-{{ ai_gen_id }}', AutoplayVideo{{ ai_gen_id }});
  })();
</script>

